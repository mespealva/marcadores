<h1>Categorias</h1>
<%= render 'form', cat: @cat %>
  
<%= link_to 'json', json_path %>
<%= link_to 'mostrar todas las cats', cats_path, remote: true%>

<div id="tree">
    
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Children</th>
      <th colspan="3" class="text-center">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @cats.each do |cat| %>
      <tr>
      <%unless cat.cats.empty?%>
        <td><%= cat.name %></td>
        
        <td> <% cat.cats.each do |c| %>
        - <%= c.name %><br>
        <% end %></td>
        <td><%= link_to 'Show', cat %></td>
        <td><%= link_to 'Edit', edit_cat_path(cat) %></td>
        <td><%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>